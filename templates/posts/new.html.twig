{% extends 'base.html.twig' %}

{% block body %}
{% include 'home/_navbar.html.twig' %}
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      line-height: 1.5;
    }

    .main-layout {
      min-height: 100vh;
      background: linear-gradient(to bottom right, #faf8f5, #f4efe6, #e8dcc9);
    }

    .header {
      backdrop-filter: blur(8px);
      position: sticky;
      top: 0;
      z-index: 40;
      background: linear-gradient(to right, #faf8f5, #f4efe6);
      border-bottom: 1px solid #c4a47c;
    }

    .header-content {
      max-width: 1200px;
      margin: 0 auto;
      padding: 1rem;
    }

    .back-btn {
      display: inline-flex;
      align-items: center;
      padding: 0.5rem;
      border-radius: 0.5rem;
      color: #715344;
      background-color: #e8dcc9;
      border: 1px solid #c4a47c;
      text-decoration: none;
      transition: all 0.2s;
    }

    .back-btn:hover {
      background-color: #d7c2a3;
    }

    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 2rem 1rem;
    }

    .content-grid {
      display: grid;
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .card {
      backdrop-filter: blur(8px);
      background: linear-gradient(to bottom right, #faf8f5, #f4efe6);
      border: 1px solid #b5906a;
      border-radius: 0.5rem;
      box-shadow: 0 25px 50px -12px rgba(196, 164, 124, 0.5);
    }

    .card-content {
      padding: 1.5rem;
    }

    .form-header {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      margin-bottom: 1.5rem;
    }

    .form-title {
      font-size: 1.25rem;
      font-weight: 600;
      color: #5d4439;
    }

    .form-group {
      margin-bottom: 1.5rem;
    }

    .form-label {
      display: block;
      font-size: 0.875rem;
      font-weight: 500;
      margin-bottom: 0.5rem;
      color: #715344;
    }

    .form-input,
    .form-select,
    .form-textarea {
      width: 100%;
      padding: 0.5rem 0.75rem;
      background-color: #f4efe6;
      border: 1px solid #c4a47c;
      border-radius: 0.375rem;
      color: #5d4439;
      font-size: 0.875rem;
    }

    .form-input:focus,
    .form-select:focus,
    .form-textarea:focus {
      outline: none;
      border-color: #a67c5a;
      box-shadow: 0 0 0 2px rgba(166, 124, 90, 0.2);
    }

    .form-textarea {
      min-height: 120px;
      resize: vertical;
    }

    .char-count {
      font-size: 0.75rem;
      color: #8a654c;
      margin-top: 0.25rem;
    }

    .upload-area {
      border: 2px dashed #b5906a;
      border-radius: 0.5rem;
      padding: 2rem;
      text-align: center;
      background-color: #f4efe6;
      cursor: pointer;
      transition: all 0.2s;
    }

    .upload-area:hover {
      border-color: #a67c5a;
      background-color: #e8dcc9;
    }

    .upload-icon {
      width: 3rem;
      height: 3rem;
      border-radius: 50%;
      background-color: #e8dcc9;
      border: 1px solid #c4a47c;
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0 auto 0.75rem;
    }

    .upload-text {
      font-weight: 500;
      color: #715344;
    }

    .upload-subtext {
      font-size: 0.875rem;
      color: #8a654c;
    }

    .btn-primary {
      background: linear-gradient(to right, #8a654c, #a67c5a);
      color: #faf8f5;
      border: 1px solid #715344;
      padding: 0.5rem 2rem;
      border-radius: 0.375rem;
      font-weight: 500;
      cursor: pointer;
      transition: all 0.2s;
      box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    }

    .btn-primary:hover {
      background: linear-gradient(to right, #715344, #8a654c);
    }

    .sidebar-card {
      backdrop-filter: blur(8px);
      background: linear-gradient(to bottom right, #faf8f5, #f4efe6);
      border: 1px solid #b5906a;
      border-radius: 0.5rem;
      box-shadow: 0 25px 50px -12px rgba(196, 164, 124, 0.5);
      margin-bottom: 1.5rem;
    }

    .sidebar-header {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      margin-bottom: 1rem;
    }

    .sidebar-title {
      font-weight: 600;
      color: #5d4439;
    }

    .rules-list {
      color: #715344;
      font-size: 0.875rem;
    }

    .rule-item {
      display: flex;
      align-items: flex-start;
      gap: 0.5rem;
      margin-bottom: 0.75rem;
    }

    .rule-number {
      font-weight: 700;
      color: #8a654c;
    }

    .help-text {
      font-size: 0.875rem;
      color: #715344;
      margin-bottom: 1rem;
    }

    .help-buttons {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }

    .btn-ghost {
      width: 100%;
      text-align: left;
      padding: 0.5rem 0.75rem;
      color: #715344;
      background-color: transparent;
      border: 1px solid #d7c2a3;
      border-radius: 0.375rem;
      text-decoration: none;
      font-size: 0.875rem;
      transition: all 0.2s;
    }

    .btn-ghost:hover {
      background-color: #e8dcc9;
    }

    @media (min-width: 1024px) {
      .content-grid {
        grid-template-columns: 2fr 1fr;
      }
    }
  </style>

<div class="main-layout">
    <!-- Header simplifié -->
    <header class="header">
        <div class="header-content">
            <a href="{{ path('home_index') }}" class="back-btn">
                ← Retour
            </a>
        </div>
    </header>

    <div class="container">
        <div class="content-grid">
            <!-- Formulaire principal -->
            <div>
                <div class="card">
                    <div class="card-content">
                        <div class="form-header">
                            <span style="color: #715344;">✚</span>
                            <h2 class="form-title">Créer un nouveau post</h2>
                        </div>

                        {{ form_start(PostsForm, {'attr': {'enctype': 'multipart/form-data'}}) }}
                        
                        <!-- Sélection de catégorie -->
                        <div class="form-group">
                            <label class="form-label">Choisir une communauté</label>
                            {{ form_widget(PostsForm.cat, {'attr': {'class': 'form-select'}}) }}
                        </div>

                        <!-- Titre -->
                        <div class="form-group">
                            <label class="form-label">Titre</label>
                            {{ form_widget(PostsForm.title, {'attr': {'class': 'form-input', 'placeholder': 'Un titre intéressant...', 'maxlength': '300'}}) }}
                            <div class="char-count">0/300 caractères</div>
                        </div>

                        <!-- Contenu -->
                        <div class="form-group">
                            <label class="form-label">Contenu</label>
                            {{ form_widget(PostsForm.contenu, {'attr': {'class': 'form-textarea', 'placeholder': 'Qu\'avez-vous en tête ? Partagez vos pensées...', 'rows': '6'}}) }}
                        </div>

                        <!-- Upload d'image -->
                        <div class="form-group">
                            <label class="form-label">Ajouter une image (optionnel)</label>
                            {{ form_widget(PostsForm.photo, {
                                'attr': {
                                    'class': 'block w-full text-sm text-gray-700
                                             file:mr-4 file:py-2 file:px-4
                                             file:rounded-md file:border-0
                                             file:text-sm file:font-semibold
                                             file:bg-[#8a654c] file:text-white
                                             hover:file:bg-[#715344]
                                             cursor-pointer',
                                    'accept': 'image/*'
                                }
                            }) }}
                            <div id="preview-container" class="mt-4 hidden">
                                <img id="image-preview" class="max-w-full h-auto rounded-lg shadow-lg" src="" alt="Aperçu">
                                <button type="button" onclick="removeImage()" class="mt-2 text-red-600 hover:text-red-800">
                                    Supprimer l'image
                                </button>
                            </div>
                        </div>

                        <!-- Boutons d'action -->
                        <div style="padding-top: 1rem;">
                            <button type="submit" class="btn-primary">
                                Publier
                            </button>
                        </div>

                        {{ form_end(PostsForm) }}
                    </div>
                </div>
            </div>

            <!-- Sidebar -->
            <div>
                <!-- Règles de publication -->
                <div class="sidebar-card">
                    <div class="card-content">
                        <div class="sidebar-header">
                            <span style="color: #715344;">ℹ️</span>
                            <h3 class="sidebar-title">Règles de publication</h3>
                        </div>
                        <div class="rules-list">
                            <div class="rule-item">
                                <span class="rule-number">1.</span>
                                <span>Soyez respectueux et civil dans les discussions</span>
                            </div>
                            <div class="rule-item">
                                <span class="rule-number">2.</span>
                                <span>Pas de spam ou d'autopromotion excessive</span>
                            </div>
                            <div class="rule-item">
                                <span class="rule-number">3.</span>
                                <span>Pas de discours haineux ou de harcèlement</span>
                            </div>
                            <div class="rule-item">
                                <span class="rule-number">4.</span>
                                <span>Restez dans le sujet de votre communauté choisie</span>
                            </div>
                            <div class="rule-item">
                                <span class="rule-number">5.</span>
                                <span>Utilisez des avertissements de contenu appropriés</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Aide -->
                <div class="sidebar-card">
                    <div class="card-content">
                        <h3 class="sidebar-title" style="margin-bottom: 0.75rem;">Besoin d'aide ?</h3>
                        <p class="help-text">
                            Nouveau dans notre communauté ? Consultez nos ressources pour commencer.
                        </p>
                        <div class="help-buttons">
                            <a href="{{ path('categories_index') }}" class="btn-ghost">Directives de la communauté</a>
                            <a href="{{ path('app_search') }}" class="btn-ghost">FAQ</a>
                            <a href="{{ path('account_index') }}" class="btn-ghost">Contacter le support</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
// Mise à jour du compteur de caractères
document.querySelector('input[name="posts[title]"]').addEventListener('input', function() {
    const count = this.value.length;
    document.querySelector('.char-count').textContent = `${count}/300 caractères`;
});

// Gestion de l'upload d'image
document.getElementById('posts_photo').addEventListener('change', function(e) {
    if (this.files && this.files[0]) {
        const file = this.files[0];
        
        // Vérifier le type de fichier
        if (!file.type.match('image.*')) {
            alert('Veuillez sélectionner une image valide (PNG, JPG, GIF)');
            this.value = '';
            return;
        }

        // Vérifier la taille du fichier (10MB max)
        if (file.size > 10 * 1024 * 1024) {
            alert('L\'image ne doit pas dépasser 10MB');
            this.value = '';
            return;
        }

        // Afficher la prévisualisation
        const reader = new FileReader();
        reader.onload = function(e) {
            document.getElementById('image-preview').src = e.target.result;
            document.getElementById('preview-container').classList.remove('hidden');
        }
        reader.readAsDataURL(file);
    }
});

// Suppression de l'image
function removeImage() {
    document.getElementById('posts_photo').value = '';
    document.getElementById('image-preview').src = '';
    document.getElementById('preview-container').classList.add('hidden');
}
</script>

{% endblock %}
