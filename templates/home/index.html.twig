{% extends 'base.html.twig' %}

{% block title %}Utsu{% endblock %}

{% block body %}

<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Utsu</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">

  {% include 'home/_navbar.html.twig' %}
  <!-- Main content -->
  <div class="flex p-6 space-x-6">

    <!-- Sidebar: Categories -->
    <aside class="w-1/4 bg-white rounded shadow p-4">
      <h2 class="text-xl font-semibold mb-4"><a href="{{ path('categories_index')}}" class="block px-3 py-2 hover:bg-blue-100 rounded">Catégories</a></h2>
      <ul class="space-y-2">
        {% for category in categories %}
        <li><a href="#" class="block px-3 py-2 hover:bg-blue-100 rounded">{{ category.name }}</a></li>
        {% endfor %}
        
      </ul>
      
    </aside>

    <!-- Posts Feed -->
    <main class="flex-1">
      <h2 class="text-2xl font-semibold mb-4">Posts récents</h2>

      <div class="space-y-4">
            {% for post in posts %}
                <div class="bg-white p-4 rounded shadow">
                    <div class="flex justify-between items-center mb-2">
                        <span class="text-xs text-gray-400">il y a {{ post.date|date('d/m/Y H:i') }}</span>
                        <span class="text-xs text-gray-400">Catégorie: {{ post.getCat.name }}</span>
                    </div>
                    <h3 class="text-lg font-bold mb-1">{{ post.title }}</h3>
                    <p class="text-gray-700">{{ post.contenu }}</p>
                    <div class="mt-2 flex justify-between items-center">
                        <span class="text-sm text-gray-500">Auteur: {{ post.getUserID.username }}</span>
                        <a href="#" class="text-blue-600 hover:underline">Lire la suite</a>
                    </div>
                </div> 
            {% endfor %}
       </div>


    </main>

  </div>

</body>
</html> 


{% endblock %}
